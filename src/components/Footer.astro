<footer
  style="background-color: var(--bg-secondary); padding: 2.5rem 1.5rem; font-size: 0.875rem; color: var(--text-secondary);"
>
  <div
    class="max-w-6xl mx-auto flex flex-col md:flex-row justify-between items-center gap-6"
  >
    <p>
      &copy; 2025 <span style="font-weight: 600; color: var(--text-primary);"
        >TabWise</span
      >. All rights reserved.
    </p>
    <nav class="flex flex-wrap items-center gap-4">
      <a
        href="#features"
        style="transition: color 0.2s; color: var(--text-secondary);"
        onmouseover="this.style.color='var(--text-accent)';"
        onmouseout="this.style.color='var(--text-secondary)';">Features</a
      >
      <a
        href="#cta"
        style="transition: color 0.2s; color: var(--text-secondary);"
        onmouseover="this.style.color='var(--text-accent)';"
        onmouseout="this.style.color='var(--text-secondary)';">Get Started</a
      >
      <a
        href="https://github.com/yourusername/tabwise"
        target="_blank"
        rel="noopener noreferrer"
        style="transition: color 0.2s; color: var(--text-secondary);"
        onmouseover="this.style.color='var(--text-accent)';"
        onmouseout="this.style.color='var(--text-secondary)';"
      >
        GitHub
      </a>
    </nav>
  </div>
</footer>
